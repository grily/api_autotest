{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "code": {
      "type": "integer"
    },
    "message": {
      "type": "string"
    },
    "data": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "object_id": {
            "type": "integer"
          },
          "object_type": {
            "type": "string"
          },
          "parent_id": {
            "type": "integer"
          },
          "count": {
            "type": "integer"
          },
          "likes_count": {
            "type": "integer"
          },
          "content": {
            "type": "string"
          },
          "status": {
            "type": "integer"
          },
          "created_by": {
            "type": "integer"
          },
          "created_at": {
            "type": "integer"
          },
          "updated_by": {
            "type": "integer"
          },
          "updated_at": {
            "type": "integer"
          },
          "auto_update_at": {
            "type": "string"
          },
          "likes": {
            "type": "null"
          },
          "children": {
            "type": "array"
          },
          "user": {
            "type": "object",
            "properties": {
              "userid": {
                "type": "integer"
              },
              "username": {
                "type": [
                  "integer",
                  "string"
                ]
              },
              "nickname": {
                "type": "string"
              },
              "usericon": {
                "type": ["string","null"]
              }
            },
            "required": [
              "nickname",
              "usericon",
              "userid",
              "username"
            ]
          }
        },
        "required": [
          "auto_update_at",
          "children",
          "content",
          "count",
          "created_at",
          "created_by",
          "id",
          "likes",
          "likes_count",
          "object_id",
          "object_type",
          "parent_id",
          "status",
          "updated_at",
          "updated_by",
          "user"
        ]
      }
    },
    "_links": {
      "type": "object",
      "properties": {
        "self": {
          "type": "object",
          "properties": {
            "href": {
              "type": "string"
            }
          },
          "required": [
            "href"
          ]
        },
        "first": {
          "type": "object",
          "properties": {
            "href": {
              "type": "string"
            }
          },
          "required": [
            "href"
          ]
        },
        "last": {
          "type": "object",
          "properties": {
            "href": {
              "type": "string"
            }
          },
          "required": [
            "href"
          ]
        }
      },
      "required": [
        "first",
        "last",
        "self"
      ]
    },
    "_meta": {
      "type": "object",
      "properties": {
        "totalCount": {
          "type": "integer"
        },
        "pageCount": {
          "type": "integer"
        },
        "currentPage": {
          "type": "integer"
        },
        "perPage": {
          "type": "integer"
        }
      },
      "required": [
        "currentPage",
        "pageCount",
        "perPage",
        "totalCount"
      ]
    },
    "_extra": {
      "type": "object",
      "properties": {
        "top_parent_id": {
          "type": "integer"
        },
        "total": {
          "type": "integer"
        }
      },
      "required": [
        "top_parent_id",
        "total"
      ]
    }
  },
  "required": [
    "_extra",
    "_links",
    "_meta",
    "code",
    "data",
    "message"
  ]
}